<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Task</title>
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <h1>Edit Task</h1>

    <form action="/task/edit/<%= task.id %>" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" value="<%= task.title %>">
            <% if (errors.title) { %><small>
                    <%= errors.title[0] %>
                </small>
                <% } %>
        </div>

        <div>
            <label for="description">Description:</label>
            <textarea name="description" id="description"><%= task.description %></textarea>
            <% if (errors.description) { %><small>
                    <%= errors.description[0] %>
                </small>
                <% } %>
        </div>

        <div>
            <label for="due_date">Due Date:</label>
            <input type="date" name="due_date" id="due_date" value="<%= task.due_date %>">
            <% if (errors.due_date) { %><small>
                    <%= errors.due_date[0] %>
                </small>
                <% } %>

        </div>
        <div>
            <label for="categoryId">Category:</label>
            <select name="categoryId" id="categoryId">
                <% categories.forEach(category=> { %>
                    <option value="<%= category.id %>" <%=category.id===task.category_id ? "selected" : "" %>><%=
                            category.name %>
                    </option>
                    <% }); %>
            </select>
            <% if (errors.categoryId) { %><small>
                    <%= errors.categoryId[0] %>
                </small>
                <% } %>
        </div>

        <button type="submit">Update Task</button>
    </form>

</body>

</html>